<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Cuentas de <%= @client.show_information %></h3>
    <%= link_to 'Nueva Cuenta', new_account_banking_index_path(client_id: @client.id), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="border-t border-gray-200">
    <% if @accounts.any? %>
      <ul class="divide-y divide-gray-200">
        <% @accounts.each do |account| %>
          <li class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="text-sm font-medium text-blue-600">
                <%= account.show_details %>
              </div>
              <div class="ml-2 flex-shrink-0 flex space-x-2">
                <%= link_to 'Nueva TransacciÃ³n', new_transaction_banking_index_path(account_id: account.id), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
                <%= link_to 'Ver Historial', transaction_history_banking_index_path(account_id: account.id), class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-4 py-4 sm:px-6 text-gray-500">
        No hay cuentas registradas
      </div>
    <% end %>
  </div>

  <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
    <%= link_to 'Volver', banking_index_path, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
  </div>
</div> 